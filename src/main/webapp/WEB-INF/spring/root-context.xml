<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    
    <context:annotation-config />

    <import resource="data.xml" />
    <import resource="security.xml" />

    <bean id="cartService" class="market.service.impl.CartServiceImpl" />
    <bean id="contactsService" class="market.service.impl.ContactsServiceImpl" />
    <bean id="distilleryService" class="market.service.impl.DistilleryServiceImpl" />
    <bean id="orderService" class="market.service.impl.OrderServiceImpl" />
    <bean id="productService" class="market.service.impl.ProductServiceImpl" />
    <bean id="regionService" class="market.service.impl.RegionServiceImpl" />
    <bean id="storageService" class="market.service.impl.StorageServiceImpl" />
    <bean id="userAccountService" class="market.service.impl.UserAccountServiceImpl" />

    <bean class="market.dto.assembler.ContactsDtoAssembler" />
    <bean class="market.dto.assembler.OrderDtoAssembler" />
    
</beans>

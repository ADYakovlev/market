<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/mvc"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <annotation-driven />

    <context:component-scan base-package="market.controller.frontend" />
    <context:component-scan base-package="market.controller.backend" />
    <context:component-scan base-package="market.sorting" />
    <context:component-scan base-package="market.dto.assembler" />

    <!-- Исходные значения параметров магазина -->
    <context:property-placeholder location = "/WEB-INF/conf/market.properties" order="10" ignore-unresolvable="true" />
    
    <!-- Путь к веб-ресурсам -->
    <resources mapping="/resources/**" location="/resources/" />
    
    <!-- Сообщения об ошибках при валидации форм -->
    <beans:bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <beans:property name="basename" value="/WEB-INF/conf/messages.properties" />
        <beans:property name="useCodeAsDefaultMessage" value="true"/>
    </beans:bean>
    
    <!-- Перехватчики -->
    <interceptors>
        <interceptor>
            <mapping path="/**"/>
            <exclude-mapping path="/admin/**"/>
            <beans:bean class="market.interceptors.SessionCartInterceptor" />
        </interceptor>
    </interceptors>
    
</beans:beans>
